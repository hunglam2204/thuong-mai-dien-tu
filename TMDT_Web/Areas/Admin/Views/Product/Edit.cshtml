@model TMDT_Web.Models.Domain.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="side_bar_blog col-lg-3">
            <h4>Chức Năng</h4>
            <div class="categary">
                <ul>
                    <li><a href="@Url.Action("Index","AdminHome",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Trang Chủ</a></li>
                    <li><a href="@Url.Action("Index","Finance",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Báo Cáo Doanh Thu</a></li>
                    <li><a href="@Url.Action("Index","Company",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Công Ty</li>
                    <li><a href="@Url.Action("Index","Brand",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Phân Loại</a></li>
                    <li><a href="@Url.Action("Index","Product",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Sản Phẩm</a></li>
                    <li><a href="@Url.Action("Index","User",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Người Dùng</a></li>
                    <li><a href="@Url.Action("Index","Order",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Đơn Hàng</a></li>

                </ul>
            </div>
        </div>
        <div class="col-lg-9 float-left" style="margin-top:30px">

            <form action="@Url.Action("Edit","Product")" method="post" enctype="multipart/form-data">
                <table class="table">
                    <tr>
                        <td>
                            <input type="hidden" name="ProductID" value="@Model.ProductID" />
                        </td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm</td>
                        <td><input type="text" id="ProductName" name="ProductName" value="@Model.ProductName" /></td>
                    </tr>
                    <tr>
                        <td>Size</td>
                        <td><input type="text" id="Size" name="Size" /></td>
                    </tr>
                    <tr>
                        <td>Màu Sắc</td>
                        <td><input type="text" id="Color" name="Color" /></td>
                    </tr>
                    <tr>
                        <td>Giá</td>
                        <td><input type="text" id="Price" name="Price" value="@Model.Price" /></td>
                    </tr>
                    <tr>
                        <td>Ngày nhập</td>
                        <td><input type="datetime-local" id="Date" name="Date" value="@Html.DisplayFor(model=>model.Date)" /></td>
                        <td><input type="hidden" id="Date1" name="Date1" value="@Model.Date" /> </td>
                    </tr>
                    <tr>
                        <td>Mô tả</td>
                        <td>
                            <textarea id="Description" name="Description">@Model.Description</textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>Số lượng sản phẩm</td>
                        <td><input type="number" id="Quantity" name="Quantity" value="@Model.Quantity" /></td>
                    </tr>
                    <tr>
                        <td>Hình ảnh</td>
                        <td><input type="file" id="Image" name="Image" /></td>
                        <td><input type="hidden" id="Image1" name="Image1" value="@Model.Image" /></td>
                    </tr>
                    <tr>
                        <td>Loại</td>
                        <td>
                            <select name="BrandID">
                                @foreach (var item in ViewData["companies"] as IEnumerable<TMDT_Web.Models.Domain.Company>)
                                {
                                    <optgroup label="Company: @item.CompanyName">
                                        @foreach (var item1 in ViewData["brands"] as IEnumerable<TMDT_Web.Models.Domain.Brand>)
                                        {
                                            if (item.CompanyID == item1.CompanyID)
                                            {
                                                <option value="@item1.BrandID">@item1.BrandName</option>
                                            }
                                        }
                                    </optgroup>
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Thêm" />
                        </td>
                        <td>
                            @Html.ActionLink("Quay về trang chính", "Index")
                        </td>
                    </tr>
                </table>
            </form>

        </div>
    </div>
</div>


<script>
    function DateTime() {
        /**/
        document.getElementById("Date").value;
        /**/
    }
</script>
