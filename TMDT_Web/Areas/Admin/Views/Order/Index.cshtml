@model IEnumerable<TMDT_Web.Models.Domain.Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="side_bar_blog col-lg-3">
            <h4>Chức Năng</h4>
            <div class="categary">
                <ul>
                    <li><a href="@Url.Action("Index","AdminHome",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Trang Chủ</a></li>
                    <li><a href="@Url.Action("Index","Finance",new { area= "Admin"})"><i class="fa fa-angle-right"></i> Báo Cáo Doanh Thu</a></li>
                    <li><a href="@Url.Action("Index","Company",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Công Ty</li>
                    <li><a href="@Url.Action("Index","Brand",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Phân Loại</a></li>
                    <li><a href="@Url.Action("Index","Product",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Sản Phẩm</a></li>
                    <li><a href="@Url.Action("Index","User",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Người Dùng</a></li>
                    <li><a href="@Url.Action("Index","Order",new { area= "Admin"})"><i class="fa fa-angle-right"></i>Đơn Hàng</a></li>

                </ul>
            </div>
        </div>
        <div class="col-lg-9 float-left" style="margin-top:30px">
            <p>
                @Html.ActionLink("Thêm mới", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTimeOrder)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Account.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    if (item.UserID == null)
                    {
                        <tr>
                            <td>@item.OrderID</td>
                            <td>@item.DateTimeOrder</td>
                            <td></td>
                            @if (item.Status == null)
                            {
                                <td>Đang đợi xác nhận</td>
                            }
                            else if (item.Status == 1)
                            {
                                <td>Đã xác nhận</td>
                            }
                            else if (item.Status == 2)
                            {
                                <td>hủy</td>
                            }
                            else if (item.Status == 3)
                            {
                                <td>đang giao</td>
                            }
                            else if (item.Status == 4)
                            {
                                <td>Đã giao</td>
                            }
                            <td>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Accept","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/accept.png" alt="Submit" class="Button-Img" />
                                            <label>Xác nhận</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Transport","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/truck.png" alt="Submit" class="Button-Img" />
                                            <label>Đang giao</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Finish","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/money.png" alt="Submit" class="Button-Img" />
                                            <label>Finish</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Cancel","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/cancel.png" alt="Submit" class="Button-Img" />
                                            <label>Hủy đơn</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Detail","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/Detail.png" alt="Submit" class="Button-Img" />
                                            <label>Thông tin đơn hàng</label>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@item.OrderID</td>
                            <td>@item.DateTimeOrder</td>
                            <td>@item.Account.UserName</td>
                            @if (item.Status == null)
                            {
                                <td>Chờ xác nhận</td>
                            }
                            else if (item.Status == 1)
                            {
                                <td>Đã xác nhận</td>
                            }
                            else if (item.Status == 2)
                            {
                                <td>Đã hủy</td>
                            }
                            else if (item.Status == 3)
                            {
                                <td>Đang giao</td>
                            }
                            else if (item.Status == 4)
                            {
                                <td>Đã giao</td>
                            }
                            <td>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Accept","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/accept.png" alt="Submit" class="Button-Img" />
                                            <label>Xác nhận đơn hàng</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Transport","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/truck.png" alt="Submit" class="Button-Img" />
                                            <label>Đang giao</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Finish","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/money.png" alt="Submit" class="Button-Img" />
                                            <label>Đã giao</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Cancel","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/cancel.png" alt="Submit" class="Button-Img" />
                                            <label>Hủy đơn</label>
                                        </form>
                                    </div>
                                    <div class="col-sm-2">
                                        <form action="@Url.Action("Detail","Order", new { id=item.OrderID})">
                                            <input type="image" src="~/Templates/IT-Next/images/it_service/Detail.png" alt="Submit" class="Button-Img" />
                                            <label>Thông tin đơn hàng</label>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>


