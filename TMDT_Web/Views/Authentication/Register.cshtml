@model TMDT_Web.Models.Domain.Account
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section padding_layout_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row" style="text-align:center">
                    <h2>Đăng ký tài khoản:</h2>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 appointment_form">
                        <div class="form_section">
                            <form class="form_contant" action="@Url.Action("DoRegister", "Authentication")" method="post">
                                <fieldset class="row">
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Họ *" type="text" name="FirstName" required>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Tên *" type="text" name="LastName" required>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Tài khoản *" type="text" name="UserName" required>
                                        <p style="color:red">@ViewBag.errorUser</p>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Số Điện Thoại *" type="text" name="PhoneNumber" required>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Địa Chỉ *" type="text" name="Address" required>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Tuổi *" type="text" name="Age" required>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Email *" type="text" name="Email" required>
                                        <label style="color:red">@ViewBag.errorEmail</label>
                                    </div>
                                    <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                        <input class="field_custom" placeholder="Mật Khẩu *" type="password" name="Password" required>
                                    </div>
                                    <div class="center">
                                        <button class="btn main_bt" type="submit">Đăng ký</button>
                                    </div>
                                    <br />
                                    <div class="center">
                                        <a href="@Url.Action("Login","Authentication")">Đăng nhập nếu bạn đã có tài khoản...</a>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}