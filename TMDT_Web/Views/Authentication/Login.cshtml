@model TMDT_Web.Models.Domain.Account
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="section padding_layout_1">
        <div class="container">
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
                <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="row" style="text-align:center">
                        <h2 >Đăng nhập tài khoản:</h2>
                    </div>
                    <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 appointment_form">
                                <div class="form_section">
                                    <h3 class="center" style="color:red">@ViewBag.error</h3>
                                    <form class="form_contant" action="@Url.Action("DoLogin","Authentication")" method="post">
                                        <fieldset class="row">
                                            <div class="field col-lg-12 col-md-6 col-sm-12 col-xs-12">
                                                <input class="field_custom" placeholder="Email *" type="text" name="Email" required>
                                            </div>
                                            <div class="field col-lg-12 col-md-6 col-sm-12 col-xs-12">
                                                <input class="field_custom" placeholder="Mật Khẩu *" type="password" name="Password" required>
                                            </div>
                                            <div class="center">
                                                <button class="btn main_bt" type="submit">ĐĂNG NHẬP</button>
                                            </div>
                                            <br />
                                            <div class="center">
                                                <a href="@Url.Action("Register","Authentication")">Chưa có tài khoản đăng ký tại đây...</a>
                                            </div>
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


